{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es2018",
      "outDir": "./dist",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
  
    },
}